    </attributes>
    <attributes name="cloudletOutputSize" required="true" default="300" description="cloudletOutputSize the file size (in byte) of this cloudlet AFTER finish executing by a PowerDatacenter">
      <type href="http://schemas.ogf.org/occi/infrastructure#//@types.13"/>
    </attributes>
    <attributes name="utilizationModelCpu" required="true" default="UtilizationModelFull" description="the utilization model cpu" type="//@types.1"/>
    <attributes name="utilizationModelRam" required="true" default="UtilizationModelFull" description="the utilization model ram" type="//@types.1"/>
