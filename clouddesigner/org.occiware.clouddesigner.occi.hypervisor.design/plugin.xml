<plugin>

   <!-- Register Sirius viewpoint. -->
   <extension point="org.eclipse.sirius.componentization">
      <component
            class="org.occiware.clouddesigner.occi.hypervisor.design.Activator"
            id="org.occiware.clouddesigner.occi.hypervisor.design"
	        name="hypervisor"/>
   </extension>

   <!-- New wizard for creating an Hypervisor configuration file. -->
   <extension point="org.eclipse.ui.newWizards">
      <category
            id="org.occiware.clouddesigner.category.ID"
            name="Cloud Designer">
      </category>
     <wizard
            category="org.occiware.clouddesigner.category.ID"
            class="org.occiware.clouddesigner.occi.hypervisor.design.wizard.NewConfigurationWizard"
            icon="platform:/plugin/org.occiware.clouddesigner.occi.edit/icons/full/obj16/Configuration.gif"
            id="org.occiware.clouddesigner.occi.hypervisor.design.wizard.NewConfigurationWizard"
            name="Hypervisor Configuration File">
      </wizard>
   </extension>

   <!-- Popup menu for converting to an OCCI Configuration file. -->
   <extension point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="org.occiware.clouddesigner.occi.hypervisor.design.contribution"
            nameFilter="*.hypervisor"
            objectClass="org.eclipse.core.resources.IFile">
         <menu
               id="org.occiware.clouddesigner.menu"
               label="Cloud Designer"
               path="additionsCloudDesigner">
            <separator
                  name="group"/>
         </menu>
         <action
               class="org.occiware.clouddesigner.occi.emfgen.ui.popup.actions.Ecore2OCCIAction"
               enablesFor="1"
               id="org.occiware.clouddesigner.occi.hypervisor.ecore2occi"
               label="Convert to an OCCI Configuration file"
               menubarPath="org.occiware.clouddesigner.menu/group">
         </action>
      </objectContribution>
   </extension>

</plugin>