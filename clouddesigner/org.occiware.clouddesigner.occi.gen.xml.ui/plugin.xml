<plugin>

   <!-- Popup menu for generating erocci extension files. -->
   <extension point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.core.resources.IFile"
            nameFilter="*.occie"
            id="org.occiware.clouddesigner.occi.gen.xml.ui.popupMenus.contribution.IFile">
         <menu id="org.occiware.clouddesigner.menu" label="Cloud Designer" path="additionsCloudDesigner">
            <separator name="group"/>
         </menu>
         <action
               class="org.occiware.clouddesigner.occi.gen.xml.ui.popupMenus.AcceleoGenerateXmlAction"
               enablesFor="+"
               id="org.occiware.clouddesigner.occi.gen.xml.ui.popupMenus.acceleoGenerateXmlAction"
               icon="icons/default.gif"
               label="Generate erocci XML extensions"
               menubarPath="org.occiware.clouddesigner.menu/group"/>
      </objectContribution>
   </extension>

</plugin>
