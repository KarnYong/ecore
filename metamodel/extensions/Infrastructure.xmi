<?xml version="1.0" encoding="ASCII"?>
<OCCI:Extension xmi:version="2.0" xmlns:xmi="http://www.omg.org/XMI" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:OCCI="http://schemas.ogf.org/occi" xmlns:ecore="http://www.eclipse.org/emf/2002/Ecore" name="OCCI Infrastructure" scheme="http://schemas.ogf.org/occi/infrastructure#">
  <import href="Core.xmi#/"/>
  <kinds term="network" scheme="http://schemas.ogf.org/occi/infrastructure#" title="Network type">
    <attributes name="occi.network.vlan" mutable="true" type="//@types.0"/>
    <attributes name="occi.network.label" mutable="true" type="//@types.1"/>
    <attributes name="occi.network.state" required="true" type="//@types.3"/>
    <parent href="Core.xmi#//@kinds[term='resource']"/>
    <actions term="up" scheme="http://schemas.ogf.org/occi/infrastructure/network/action#"/>
    <actions term="down" scheme="http://schemas.ogf.org/occi/infrastructure/network/action#"/>
  </kinds>
  <kinds term="compute" scheme="http://schemas.ogf.org/occi/infrastructure#" title="Compute Resource">
    <attributes name="occi.compute.architecture" mutable="true" description="CPU Architecture">
      <type href="../OCCI.ecore#//string"/>
    </attributes>
    <attributes name="occi.compute.cores" mutable="true" description="CPU cores number">
      <type href="../OCCI.ecore#//integer"/>
    </attributes>
    <attributes name="occi.compute.hostname" mutable="true" description="System hostname">
      <type href="../OCCI.ecore#//string"/>
    </attributes>
    <attributes name="occi.compute.speed" mutable="true" description="CPU speed (GHz)" type="//@types.2"/>
    <attributes name="occi.compute.memory" mutable="true" description="System RAM (GB)" type="//@types.2"/>
    <attributes name="occi.compute.state" required="true" default="inactive" description="System state" type="//@types.4"/>
    <parent href="Core.xmi#//@kinds[term='resource']"/>
    <actions term="start" scheme="http://schemas.ogf.org/occi/infrastructure/compute/action#" title="Start the system"/>
    <actions term="stop" scheme="http://schemas.ogf.org/occi/infrastructure/compute/action#" title="Stop the system (graceful, acpioff or poweroff)">
      <attributes name="method">
        <type href="../OCCI.ecore#//string"/>
      </attributes>
    </actions>
    <actions term="restart" scheme="http://schemas.ogf.org/occi/infrastructure/compute/action#" title="Restart the system (graceful, warm or cold)">
      <attributes name="method">
        <type href="../OCCI.ecore#//string"/>
      </attributes>
    </actions>
    <actions term="suspend" scheme="http://schemas.ogf.org/occi/infrastructure/compute/action#" title="Suspend the system (hibernate or in RAM)">
      <attributes name="method">
        <type href="../OCCI.ecore#//string"/>
      </attributes>
    </actions>
  </kinds>
  <kinds term="storage" scheme="http://schemas.ogf.org/occi/infrastructure#" title="Storage Resource">
    <attributes name="occi.storage.size" mutable="true" required="true" description="Storage size" type="//@types.2"/>
    <attributes name="occi.storage.state" mutable="true" required="true" description="Storage state">
      <type href="../OCCI.ecore#//string"/>
    </attributes>
    <parent href="Core.xmi#//@kinds[term='resource']"/>
    <actions term="online" scheme="http://schemas.ogf.org/occi/infrastructure/storage/action#" title="Set storage online"/>
    <actions term="offline" scheme="http://schemas.ogf.org/occi/infrastructure/storage/action#" title="Set storage offline"/>
    <actions term="backup" scheme="http://schemas.ogf.org/occi/infrastructure/storage/action#" title="Set storage as backup"/>
    <actions term="snapshot" scheme="http://schemas.ogf.org/occi/infrastructure/storage/action#" title="Take storage snapshot"/>
    <actions term="resize" scheme="http://schemas.ogf.org/occi/infrastructure/storage/action#" title="Resize storage">
      <attributes name="size" type="//@types.2"/>
    </actions>
  </kinds>
  <kinds term="storagelink" scheme="http://schemas.ogf.org/occi/infrastructure#" title="StorageLink Link">
    <attributes name="occi.storagelink.deviceid" mutable="true" required="true">
      <type href="../OCCI.ecore#//string"/>
    </attributes>
    <attributes name="occi.storagelink.mountpoint" mutable="true">
      <type href="../OCCI.ecore#//string"/>
    </attributes>
    <attributes name="occi.storagelink.state" required="true">
      <type href="../OCCI.ecore#//string"/>
    </attributes>
    <parent href="Core.xmi#//@kinds[term='link']"/>
  </kinds>
  <kinds term="networkinterface" scheme="http://schemas.ogf.org/occi/infrastructure#" title="NetworkInterface type">
    <attributes name="occi.networkinterface.interface" required="true">
      <type href="../OCCI.ecore#//string"/>
    </attributes>
    <attributes name="occi.networkinterface.mac" mutable="true" required="true">
      <type href="../OCCI.ecore#//string"/>
    </attributes>
    <attributes name="occi.networkinterface.state" required="true" type="//@types.5"/>
    <parent href="Core.xmi#//@kinds[term='link']"/>
  </kinds>
  <mixins term="ipnetwork" scheme="http://schemas.ogf.org/occi/infrastructure/network#" title="IP Networking Mixin" applies="//@kinds[term='network']">
    <attributes name="occi.network.address" mutable="true">
      <type href="../OCCI.ecore#//string"/>
    </attributes>
    <attributes name="occi.network.gateway" mutable="true">
      <type href="../OCCI.ecore#//string"/>
    </attributes>
    <attributes name="occi.network.allocation" mutable="true" required="true">
      <type href="../OCCI.ecore#//string"/>
    </attributes>
  </mixins>
  <mixins term="ipnetworkinterface" scheme="http://schemas.ogf.org/occi/infrastructure/networkinterface#" title="IP Network Interface Mixin" applies="//@kinds[term='networkinterface']">
    <attributes name="occi.networkinterface.address" mutable="true" required="true">
      <type href="../OCCI.ecore#//string"/>
    </attributes>
    <attributes name="occi.networkinterface.gateway" mutable="true">
      <type href="../OCCI.ecore#//string"/>
    </attributes>
    <attributes name="occi.networkinterface.allocation" mutable="true" required="true">
      <type href="../OCCI.ecore#//string"/>
    </attributes>
  </mixins>
  <mixins term="os_tpl" scheme="http://schemas.ogf.org/occi/infrastructure#" title="OS Template" applies="//@kinds[term='compute']"/>
  <mixins term="resource_tpl" scheme="http://schemas.ogf.org/occi/infrastructure#" title="Resource template">
    <applies href="Core.xmi#//@kinds[term='resource']"/>
  </mixins>
  <types name="integer4096" instanceClassName="int"/>
  <types name="Token" instanceClassName="java.lang.String"/>
  <types name="float" instanceClassName="float"/>
  <types xsi:type="ecore:EEnum" name="NetworkStatus">
    <eLiterals name="active"/>
    <eLiterals name="inactive" value="1"/>
  </types>
  <types xsi:type="ecore:EEnum" name="ComputeStatus">
    <eLiterals name="active"/>
    <eLiterals name="inactive" value="1"/>
  </types>
  <types xsi:type="ecore:EEnum" name="NetworkInterfaceStatus">
    <eLiterals name="active"/>
    <eLiterals name="inactive" value="1"/>
  </types>
</OCCI:Extension>
